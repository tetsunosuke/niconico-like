{
  "name": "niconicoLike",
  "version": "0.1.1",
  "description": "ニコニコ風コメントスクリーン",
  "main": "app.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "electron . ",
    "build:mac": "npx electron-builder --mac --x64",
    "build:win": "npx electron-builder --win --x64"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@slack/bolt": "^2.3.0",
    "@slack/events-api": "^2.3.4",
    "@slack/web-api": "^5.11.0",
    "body-parser": "^1.19.0",
    "dateformat": "^3.0.3",
    "electron-store": "^5.2.0",
    "express": "^4.17.1",
    "gsap": "^3.5.1",
    "http": "0.0.1-security",
    "jquery": "^3.5.1",
    "puppeteer-core": "^5.3.1",
    "puppeteer-in-electron": "^3.0.2",
    "socket.io": "^2.3.0"
  },
  "devDependencies": {
    "dateformat": "^3.0.3",
    "electron": "^9.0.5",
    "electron-builder": "^22.7.0"
  },
  "build": {
    "appId": "com.electron.kinrou",
    "directories": {
      "output": "dist"
    },
    "files": [
      "assets",
      "src",
      "package.json",
      "package-lock.json",
      "node_modules"
    ],
    "mac": {
      "target": [
        {
          "target": "default",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "win": {
      "icon": "assets/win/icon_win.ico",
      "target": "nsis"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}
